<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our plants</h1>
    </div>
  </div>

  
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-4">
        <div class="plant-card">
          <div class="plant-card-image" style="background-image: url(img_tree.gif)"></div>
          <div class="plant-card-content">
            <div class="plant-card-title">
              <h4><%= plant.name %></h4>
            </div>
            <p><%= plant.address %></p>
            <div class="flex">
              
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= plant.price_per_day %>
              </div>
            </div>
          </div>
          <div class="plant-card-actions">
            <%= link_to 'More info', plant_path(plant) %>
            
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>