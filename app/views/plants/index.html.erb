<h1>Plants#index</h1>
<p>Find me in app/views/plants/index.html.erb</p>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Available plants</h1>
      <div id="map"
        style="width: 100%; height: 350px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  
<div class="row">
  <% @plants.each do |plant| %>
    <div class="col-4">
      <div class="plant-card">
        <div class="plant-card-image">
          <%= cl_image_tag(plant.photo.key) %>
        </div>
        <div class="plant-card-content">
          <div class="plant-card-title">
            <h4><%= plant.name %></h4>
          </div>
          <p><%= plant.address %></p>
          <div class="flex">
            
            <div class="flex ml-3">
              <i class="material-icons mr-2">Price per day: <%= plant.price_per_day %>â‚¬</i> 
            </div>
          </div>
        </div>
        <div class="plant-card-actions">
          <%= link_to 'More info', plant_path(plant) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
