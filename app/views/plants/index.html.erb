<h1>Plants#index</h1>
<p>Find me in app/views/plants/index.html.erb</p>

<h1 id="index-title">Available plants</h1>

<div class="cards-container">
  <div class="cards">
    <% @plants.each do |plant| %>
      <div class="card">
          <div class="plant-card-image">
            <%= cl_image_tag(plant.photo.key) %>
          </div>
          <div class="plant-card-content">
            <div class="plant-card-title">
              <h4><%= plant.name %></h4>
            </div>
            <p><%= plant.address %></p>
            <div class="flex">
              <i class="material-icons mr-2"><%= plant.price_per_day %>â‚¬/day</i>
            </div>
          </div>
          <div class="plant-card-actions">
            <%= link_to 'More info', plant_path(plant) %>
          </div>
      </div>
    <% end %>
  </div>

  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
