<div class="container-md">
  <div class="row-new">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Book a plant</h3>
          <%= simple_form_for [@plant, @booking] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
