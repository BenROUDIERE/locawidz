<div class="row card-product" id="plant_card">

  <div class="col-4">
    <p><%= image_tag("avatar.png") if @user.photo.empty? %></p>
    <%= cl_image_tag(@user.photo.key,width: 700, height: 350, crop: :fill) %>
    <%= simple_form_for @user do |f| %>
      <%= f.input :photo, as: :file %>
      <%= f.submit 'Add your photo', class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="col-6">
    <div class="mx-2">
      <div>
        <div class="card-product-infos">
          <h2><%= @user.name %></h2>
          <p><%= @user.email %></p>
        </div>
      </div>
  <div class="container-booked-plants">
    <div class="section-title">
      <h1>My plants</h1>
    </div>
    <div class="cards-container d-flex">
        <p><%= "You have no plant fort the moment" if @plants.user.empty? %></p>
        <div class="cards" id="owner-cards-reservation">
        <% @plants.each do |plant| %>
          <div class="card text-center" id="title-plant-reserved" >
            <div class="card-header">
              <h5><strong><%= plant.user.name %></strong></h5>
            </div>     
            </div>
          </div>
        <%end%>
        </div>
    </div>
  </div>
      <div class="d-flex justify-content-end">
        <%= link_to 'Return', root_path, class: "btn-flat-save" %>
      </div>
    </div>
  </div>

</div>