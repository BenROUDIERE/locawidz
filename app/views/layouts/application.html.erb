<!DOCTYPE html>
<html>
  <head>
    <title>Locawidz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag("green-weed.png") %>
        <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="search">
        <%= form_tag plants_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "searchTerm",
            placeholder: "Plant Name or localisation"
          %>
          <button type="submit" class="searchButton">
          <i <%= submit_tag "Search", class: "fa fa-search" %></i>
          </button>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a><%= link_to root_path do %>
              <%= content_tag :span, "Home", class:"nav-link" %>
              <% end %>
            </a>
          </li>
          <li class="nav-item">
            <a><%= link_to owner_bookings_path do %>
              <%= content_tag :span, "My reservations", class:"nav-link" %>
              <% end %>
            </a>
          </li>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to new_plant_path do %>
                <%= content_tag :span, "Post a plant", :class => "dropdown-item" %>
              <% end %>
              <%= link_to owner_bookings_path do %>
                <%= content_tag :span, "All my reservations", :class => "dropdown-item" %>
              <% end %>
              <%= link_to plants_path do %>
                <%= content_tag :span, "My plants to rent", :class => "dropdown-item" %>
              <% end %>
              <%= link_to new_user_session_path do %>
                <%= content_tag :span, "Connexion", :class => "dropdown-item" %>
              <% end %>
            </div>
          </li>
        </ul>
      </div>

    </div>
    <div class="custom-container">
    <%= yield %>
    </div>
  </body>

  <footer>
    <div class="footer bottom">
        <div class="footer-links">
          <a href="https://www.instagram.com/balcon_fleuri/"><i class="fab fa-instagram"></i></a>
          <a href="https://www.facebook.com/WEED-404093609648112"><i class="fab fa-facebook"></i></a>
        </div>
        <div class="footer-text">
          <p>Locawidz</p>
        </div>
        <div class="footer-copyright">
          Only for plants <i class="fas fa-heart"></i> !
        </div>
    </div>
  </footer>

</html>
